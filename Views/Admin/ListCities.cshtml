@model IEnumerable<CityData>

<h1 class="bg-info text-white">Manage Countries</h1>


<table class="table table-sm table-bordered table-bordered">
    <tr><th>ID</th><th>City</th><th>Country</th><th>Update</th><th>Delete</th></tr>
    @foreach (CityData city in Model)
    {
<tr>
    <td>@city.Id</td>
    <td>@city.Name</td>
    <td>@city.Country</td>
    <td><a class="btn btn-sm btn-primary" asp-action="EditCity" asp-route-id="@city.Id">Update</a></td>
    <td>
        <form asp-action="DeleteCity" asp-route-id="@city.Id" method="post">
            <button type="submit" class="btn btn-sm btn-danger">
                Delete
            </button>
        </form>
    </td>
</tr>
    }
</table>
<br />
<a asp-action="CreateCity" class="btn btn-secondary">New City</a>
